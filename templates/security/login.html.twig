{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="container">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté via votre mail {{ app.user.userIdentifier }}, vous pouvez vous <a href="{{ path('app_logout') }}">déconnecter</a>
            </div>
        {% endif %}
        <fieldset>
            <h1 class="text-center">Connexion</h1>

            <div class="form-group">
                <label for="inputEmail" class="form-label mt-4">Adresse email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" aria-describedby="emailHelp"
                       placeholder="Entrer votre email" autocomplete="email" required autofocus>
                <small id="emailHelp" class="form-text text-muted">Nous ne le partagerons jamais avec quiconque.</small>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="form-label mt-4">Mot de passe</label>
                <input type="password" name="password" class="form-control" id="inputPassword" placeholder="Mot de passe" autocomplete="current-password" required>
            </div>
            <label>
                <input type="checkbox" name="_remember_me" class="mt-4" checked>
                Se souvenir de moi
            </label>
            <div class="class form-group">
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <div >
            <button type="submit" class="btn btn-primary mt-4">Se connecter</button>
            </div>
        </fieldset>
    </form>
    </div>


{% endblock %}
