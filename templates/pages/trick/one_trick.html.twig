{% extends 'base.html.twig' %}

{% block body %}
    <div class="container d-flex justify-content-center">
        <div class="col mb-4 w-50 p-3 ">
            <div class="card mb-3">
                <div class="card-header">
                    <div class="row">
                    <div class="col-10">
                        <h3>{{ trick.name }}</h3>
                    </div>
                    <div class="col-2">
                        {% if is_granted('ROLE_USER') %}
                            <a href="{{ path('app_trick_edit', {id: trick.id}) }}" class="card-link"><i class="fa-solid fa-pen-to-square"></i></a>
                            <button type="button" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#deleteTrickModal{{ trick.id }}">
                                <i class="fa-solid fa-trash-can"></i>
                            </button>
                        {% endif %}
                    </div>
                    </div>
                </div>

                <div class="card-body">
                    <h5 class="card-title">Groupe : {{ trick.trickgroup.nameGroup }}</h5>
                    <h6 class="card-subtitle text-muted">Créé le {{ trick.createdAt|date("d/m/Y") }} par {{ trick.createdBy.username }}</h6>
                </div>

                <img class=img-responsive src="{{ asset('images/tricks/'~trick.mainimage) }}" alt="image du trick" style=width:100%>
                <div class="card-body">
                    <p class="card-text">{{ trick.description}}</p>
                </div>
            </div>
        </div>
    </div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <img class="show-article-img" src="{{ asset('images/tricks/'~trick.mainimage)|imagine_filter('squared_thumbnail_medium') }}">
                        </div>
                    </div>
                </div>
<div class="container mt-4">
    <div class="card border-primary mb-3">

            {% if is_granted('ROLE_USER') %}
            {#        formulaire d'ajout de commentaires si enregistré#}
                <div class="container" >
                    {{ form_start(commentaryForm) }}
                    <div class="form-group">
                        {{ form_label(commentaryForm.content) }}
                        {{ form_widget(commentaryForm.content) }}
                        <div class="form-error">
                            {{ form_errors(commentaryForm.content) }}
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_row(commentaryForm.Commenter) }}
                    </div>
                    {{ form_end(commentaryForm) }}
                </div>
            {% endif %}

    </div>
</div>
<div class="container mt-4">
    <h3>Commentaires du trick : {{ trick.name }}</h3>
</div>

    {% for commentary in commentaries %}
<div class="container mt-4">

    <div class="card border-primary mb-3" style="max-width: 100%;">
            <div class="card-header">Publié le {{ commentary.updatedAt|date("d/m/Y") }} par {{ commentary.createdBy.username }}</div>
            <div class="card-body">
                <p class="card-text">{{ commentary.content }}</p>
            </div>
        </div>
</div>
    {% endfor %}


    {% include "/pages/trick/_trick_delete_modal.html.twig" %}

{% endblock %}

{% block title %}
    {{ trick.name }}
{% endblock %}

